{
  "name": "roots/bedrock",
  "type": "project",
  "license": "MIT",
  "description": "WordPress boilerplate with modern development tools, easier configuration, and an improved folder structure",
  "homepage": "https://roots.io/bedrock/",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "authors": [
    {
      "name": "Scott Walkinshaw",
      "email": "scott.walkinshaw@gmail.com",
      "homepage": "https://github.com/swalkinshaw"
    },
    {
      "name": "Ben Word",
      "email": "ben@benword.com",
      "homepage": "https://github.com/retlehs"
    }
  ],
  "keywords": [
    "bedrock", "roots", "wordpress", "stack", "composer", "vagrant", "wp"
  ],
  "support": {
    "issues": "https://github.com/roots/bedrock/issues",
    "forum": "https://discourse.roots.io/category/bedrock"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "composer/installers": true,
      "roots/wordpress-core-installer": true,
      "wikimedia/composer-merge-plugin": true
    }
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=8.0",
    "composer/installers": "^2.0",
    "oscarotero/env": "^1.2.0",
    "roots/wordpress": "^6.3.2",
    "roots/wp-config": "^1.0.0",
    "roots/wp-password-bcrypt": "^1.0.0",
    "vlucas/phpdotenv": "^2.6.7",
    "wikimedia/composer-merge-plugin": "dev-master",
    "wp_lagoon_logs/wp_lagoon_logs": "^0.4",
    "wpackagist-plugin/akismet": "^5.0",
    "wpackagist-plugin/classic-editor": "^1.6",
    "wpackagist-plugin/image-elevator": "^2.6",
    "wpackagist-plugin/lumturio-wp-monitor": "^1.0",
    "wpackagist-plugin/redirection": "^5.3",
    "wpackagist-plugin/site-offline": "^1.4",
    "wpackagist-plugin/wordpress-seo": "^21.0",
    "wpackagist-plugin/wp-accessibility": "^2.0",
    "wpackagist-plugin/wp-smushit": "^3.9",
    "wpackagist-theme/twentytwenty": "^2.2"
  },
  "require-dev": {
    "aaemnnosttv/wp-cli-dotenv-command": "^2.0",
    "roave/security-advisories": "dev-master",
    "squizlabs/php_codesniffer": "^3.0.2"
  },
  "extra": {
    "installer-paths": {
      "web/content/mu-plugins/{$name}/": [
        "type:wordpress-muplugin"
      ],
      "web/content/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/content/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp",
    "merge-plugin": {
      "include": [
        "project.json"
      ],
      "recurse": true,
      "replace": true,
      "ignore-duplicates": false,
      "merge-dev": true,
      "merge-extra": true,
      "merge-extra-deep": false,
      "merge-replace": true,
      "merge-scripts": true
    }
  },
  "scripts": {
    "post-install-cmd": [
      "/bin/cp -pf .docker/wordpress/wp-config.php web/wp/"
    ],
    "post-update-cmd": [
      "/bin/cp -pf .docker/wordpress/wp-config.php web/wp/"
    ],
    "post-root-package-install": [
      "php -r \"copy('.env.default', '.env');\""
    ],
    "test": [
      "phpcs"
    ]
  }
}
